# Supabase Configuration
SUPABASE_URL=https://your-supabase-project-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Razorpay Integration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Backend API
API_BASE_URL=http://localhost:8000/api/v1

# App Configuration
APP_NAME=Dayliz
APP_ENV=development  # development, staging, production
LOG_LEVEL=debug      # debug, info, warning, error

# Firebase Configuration (for notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-web-client-id-here
GOOGLE_REDIRECT_URI=your-supabase-auth-callback-url-here
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# App URLs
APP_RESET_PASSWORD_URL=https://dayliz.app/update-password
APP_REDIRECT_URL=com.dayliz.dayliz_app://login

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=false
ENABLE_PUSH_NOTIFICATIONS=true