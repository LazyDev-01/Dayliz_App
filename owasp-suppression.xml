<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Flutter SDK Suppressions -->
    <!-- Suppress vulnerabilities in Flutter SDK that we cannot control -->
    <suppress>
        <notes>Flutter SDK vulnerabilities - not controllable by application</notes>
        <packageUrl regex="true">^pkg:.*flutter.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Flutter cache and build artifacts</notes>
        <filePath regex="true">.*\.flutter.*</filePath>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Flutter pub cache</notes>
        <filePath regex="true">.*\.pub-cache.*</filePath>
        <cve>.*</cve>
    </suppress>
    
    <!-- Dart SDK Suppressions -->
    <suppress>
        <notes>Dart SDK vulnerabilities - not controllable by application</notes>
        <packageUrl regex="true">^pkg:.*dart.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <!-- Build and Cache Directory Suppressions -->
    <suppress>
        <notes>Build artifacts and cache directories</notes>
        <filePath regex="true">.*/build/.*</filePath>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Android build artifacts</notes>
        <filePath regex="true">.*/android/.*</filePath>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>iOS build artifacts</notes>
        <filePath regex="true">.*/ios/.*</filePath>
        <cve>.*</cve>
    </suppress>
    
    <!-- Discontinued JS Package - Known Issue -->
    <suppress>
        <notes>JS package is discontinued but we have override in place</notes>
        <packageUrl regex="true">^pkg:.*js@.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <!-- Development and Test Dependencies -->
    <suppress>
        <notes>Development dependencies - not in production</notes>
        <packageUrl regex="true">^pkg:.*test.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Development dependencies - not in production</notes>
        <packageUrl regex="true">^pkg:.*dev.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <!-- Specific Known False Positives -->
    <suppress>
        <notes>Analyzer package - development only, overridden in pubspec</notes>
        <packageUrl regex="true">^pkg:.*analyzer.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Source gen package - development only, overridden in pubspec</notes>
        <packageUrl regex="true">^pkg:.*source_gen.*</packageUrl>
        <cve>.*</cve>
    </suppress>
    
</suppressions>
